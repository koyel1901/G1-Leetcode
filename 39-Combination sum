class Solution {
public:
    vector<vector<int>> ans;
    vector<int> path;
    void dfs(vector<int>& nums, int target,int i) 
    {
        if (target == 0)    //  found valid combination
        {             
            ans.push_back(path);
            return;
        }
        if (i>=nums.size() || target<0) 
            return;
        path.push_back(nums[i]);  // Pick current number
        dfs(nums,target-nums[i],i);   // stay at same i (reuse allowed)
        path.pop_back();
        dfs(nums,target,i + 1);  // Skip current number
    }

    vector<vector<int>> combinationSum(vector<int>& candidates, int target) {
        dfs(candidates,target,0);
        return ans;
    }
};
